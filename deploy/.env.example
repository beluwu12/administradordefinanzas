#!/bin/bash
# =====================================================
# Variables de Configuración Azure
# Copia este archivo a .env.azure y completa los valores
# =====================================================

# Recursos Azure (ya existentes)
export AZURE_RESOURCE_GROUP="your-resource-group"
export AZURE_LOCATION="eastus"
export AZURE_REGISTRY_NAME="your-registry-name"

# =====================================================
# DATABASE - Supabase PostgreSQL (o Azure)
# =====================================================
# Para Supabase: postgresql://user:password@host:5432/database
export DATABASE_URL="your-database-url-here"

# =====================================================
# PostgreSQL Azure (IGNORADO si DATABASE_URL está definido)
# =====================================================
export POSTGRES_SERVER_NAME="your-postgres-server"
export POSTGRES_ADMIN_USER="your-admin-user"
export POSTGRES_ADMIN_PASSWORD="your-secure-password"
export POSTGRES_DB="your-database"

# Container Apps
export CONTAINER_ENV_NAME="your-container-env"

# Secrets de la App
# Genera con: openssl rand -hex 32
export JWT_SECRET="generate-with-openssl-rand-hex-32"

# Frontend URL para CORS (se autoconfigura después del deploy)
export CORS_ALLOWED_ORIGINS=""

# Opcional: Push Notifications
export VAPID_PUBLIC_KEY=""
export VAPID_PRIVATE_KEY=""
